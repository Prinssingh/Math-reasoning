<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity=""
            android:background="#EFEDED">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watch Video for"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily="@font/cantora_one"
                android:layout_marginBottom="30dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ShowHintRewardVideo"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#00c2cb">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/button_style2"
                        >

                        <ImageView
                            android:layout_marginStart="20dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/watch_ads"/>

                        <TextView
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HINT"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp"
                            android:layout_marginEnd="20dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ShowSolutionRewardVideo"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#00c2c3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/button_style2"
                        >

                        <ImageView
                            android:layout_marginStart="20dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/watch_ads"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SOLUTION"
                            android:textStyle="bold"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/adsNotLoaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:visibility="invisible"
                android:textAlignment="center"
                android:text="Only 2 Hint/Solution see in 1 day"/>



            <Button
                android:id="@+id/CloseGetHintDialog"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:layout_marginTop="20dp"
                android:textColor="#00c2c3"
                tools:ignore="HardcodedText"
                android:layout_gravity="center"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>